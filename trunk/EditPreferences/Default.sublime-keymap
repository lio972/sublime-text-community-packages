    <binding key="+" command="insertBindingRepr shift+">
        <context name="selector" value="text.xml meta.tag.xml string.quoted.double.xml"/>
    </binding>

    <binding key="ctrl+shift+equals" command="insertBindingRepr ctrl+shift+">
        <context name="selector" value="text.xml meta.tag.xml string.quoted.double.xml"/>
    </binding>
    <binding key="ctrl+alt+equals" command="insertBindingRepr ctrl+alt+">
        <context name="selector" value="text.xml meta.tag.xml string.quoted.double.xml"/>
    </binding>
    <binding key="ctrl+alt+shift+equals" command="insertBindingRepr ctrl+alt+shift+">
        <context name="selector" value="text.xml meta.tag.xml string.quoted.double.xml"/>
    </binding>
    <binding key="alt+shift+equals" command="insertBindingRepr alt+shift+">
        <context name="selector" value="text.xml meta.tag.xml string.quoted.double.xml"/>
    </binding>

    <!-- NAMESPACE ESCAPABLES -->
    <binding key="ctrl+equals" command="insertAndDecodeCharacters ctrl+${key_bindings}">
        <context name="selector" value="text.xml meta.tag.xml string.quoted.double.xml"/>
    </binding>

    <binding key="+" command="insertAndDecodeCharacters shift+${key_bindings}">
        <context name="selector" value="text.xml meta.tag.xml string.quoted.double.xml"/>
    </binding>

    <binding key="alt+equals" command="insertAndDecodeCharacters alt+${key_bindings}">
        <context name="selector" value="text.xml meta.tag.xml string.quoted.double.xml"/>
    </binding>

    <binding key="ctrl+shift+equals" command="insertAndDecodeCharacters ctrl+shift+${key_bindings}">
        <context name="selector" value="text.xml meta.tag.xml string.quoted.double.xml"/>
    </binding>

    <binding key="alt+shift+equals" command="insertAndDecodeCharacters alt+shift+${key_bindings}">
        <context name="selector" value="text.xml meta.tag.xml string.quoted.double.xml"/>
    </binding>

    <binding key="ctrl+alt+equals" command="insertAndDecodeCharacters ctrl+alt+${key_bindings}">
        <context name="selector" value="text.xml meta.tag.xml string.quoted.double.xml"/>
    </binding>
    <binding key="ctrl+alt+shift+equals" command="insertAndDecodeCharacters ctrl+alt+shift+${key_bindings}">
        <context name="selector" value="text.xml meta.tag.xml string.quoted.double.xml"/>
    </binding>

    <namespace name="key_bindings">
