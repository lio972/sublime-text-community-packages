<bindings>
    <!-- OPEN/CREATE EDIT PREFERENCES -->
    <binding key="ctrl+alt+shift+p" command="editPackageFiles sublime-options" />
    <binding key="ctrl+alt+shift+k" command="editPackageFiles sublime-keymap" />

    <!-- EDIT/INSERT SNIPPETS  -->
    <binding key="ctrl+alt+shift+s" command="editPackageFiles sublime-snippet" />
    <binding key="ctrl+alt+shift+i" command="editPackageFiles sublime-snippet insertSnippet" />

    <!-- EDIT PLUGIN FILES -->
    <binding key="ctrl+alt+shift+g" command="editPackageFiles py" />

    <!-- LIST/EDIT SHORTCUT KEYS/COMMANDS -->
    <binding key="ctrl+alt+shift+l" command="listShortcutKeys" />
    <binding key="ctrl+alt+shift+c" command="listCommands" />
    <binding key="ctrl+alt+o"       command="listOptions" />

    <!-- OPTIONS SET PREFERENCES-->
    <!-- <binding key="ctrl+alt+shift+m" command="editPackageFiles tmTheme set colorscheme" /> -->
    <binding key="ctrl+alt+shift+m"  command="editPackageFiles sublime-menu" />
    <binding key="ctrl+alt+shift+n"  command="editPackageFiles tmLanguage set syntax" />

    <!-- NEW KEYBINDING -->
    <binding key="/keymap|binding/,tab" command="insertSnippet 'Packages/EditPreferences/newKeyMap.sublime-snippet'">
        <context name="selector" value="text.xml"/>
    </binding>

	<binding key="ctrl+alt+k" command="createPluginBinding" />

    <!--
        INSERT BINDING REPR:

        A set of keybindings f   which will use a <namespace> to    `escape` keys like

            backspace,
            f[0-9]{1,2},
            left,
            right,
            up,
            down

        Usage is any combination of ctrl|alt|shift  +   =.  This will enter the key_bindings
        namespace. The namespace doesn't seem to capture all possible keys, some such as the below
        do not work properly.

            [
            ]
            "
            '
            ;


        First the fallback bindings are set ( for those that can't be caputured in a namespace )
        and then the namespaced ones after ( taking precedence ).

     -->

    <binding key="ctrl+equals" command="insertBindingRepr ctrl+">
        <!-- if we had a sublime-keymap tmLanguage with a key scope it would be good  -->
        <context name="isOverlayVisible" value="true"/>
    </binding>

    <binding key="ctrl+shift+equals" command="insertBindingRepr ctrl+shift+">
        <context name="isOverlayVisible" value="true"/>
    </binding>

    <binding key="alt+equals" command="insertBindingRepr alt+">
        <context name="isOverlayVisible" value="true"/>
    </binding>

    <binding key="+" command="insertBindingRepr shift+">
        <context name="isOverlayVisible" value="true"/>
        <context name="noPreceedingText" value="[^+]"/>
    </binding>

    <binding key="ctrl+alt+equals" command="insertBindingRepr ctrl+alt+">
        <context name="isOverlayVisible" value="true"/>
    </binding>
    <binding key="ctrl+alt+shift+equals" command="insertBindingRepr ctrl+alt+shift+">
        <context name="isOverlayVisible" value="true"/>
    </binding>
    <binding key="alt+shift+equals" command="insertBindingRepr alt+shift+">
        <context name="isOverlayVisible" value="true"/>
    </binding>

    <binding key="ctrl+equals" command="insertAndDecodeCharacters ctrl+${key_bindings}">
        <context name="isOverlayVisible" value="true"/>
    </binding>

    <binding key="alt+equals" command="insertAndDecodeCharacters alt+${key_bindings}">
        <context name="isOverlayVisible" value="true"/>
    </binding>

    <binding key="+" command="insertAndDecodeCharacters shift+${key_bindings}">
        <context name="isOverlayVisible" value="true"/>
        <context name="noPreceedingText" value="."/>
    </binding>

    <binding key="ctrl+shift+equals" command="insertAndDecodeCharacters ctrl+shift+${key_bindings}">
        <context name="isOverlayVisible" value="true"/>
    </binding>
    <binding key="ctrl+alt+equals" command="insertAndDecodeCharacters ctrl+alt+${key_bindings}">
        <context name="isOverlayVisible" value="true"/>
    </binding>
    <binding key="ctrl+alt+shift+equals" command="insertAndDecodeCharacters ctrl+alt+shift+${key_bindings}">
        <context name="isOverlayVisible" value="true"/>
    </binding>
    <binding key="alt+shift+equals" command="insertAndDecodeCharacters alt+shift+${key_bindings}">
        <context name="isOverlayVisible" value="true"/>
    </binding>

    <!-- KEY_BINDING SCOPE XML -->

    <!-- UNESCAPABLE FALLBACKS -->
    <binding key="ctrl+equals" command="insertBindingRepr ctrl+">
        <!-- if we had a sublime-keymap tmLanguage with a key scope it would be good  -->
        <context name="selector" value="text.xml meta.tag.xml string.quoted.double.xml"/>
    </binding>

    <binding key="alt+equals" command="insertBindingRepr alt+">
        <context name="selector" value="text.xml meta.tag.xml string.quoted.double.xml"/>
